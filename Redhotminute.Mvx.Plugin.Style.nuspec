<?xml version="1.0" encoding="utf-8"?>
 <package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
    <metadata>
        <id>Redhotminute.Mvx.Plugin.Style</id>
        <version>2.0.0-beta1</version>
        <title>Redhotminute Mvvmcross style plugin</title>
        <authors>Koen Deleij</authors>
        <owners>Redhotminute BV</owners>
        <requireLicenseAcceptance>false</requireLicenseAcceptance>
        <description>Mvvmcross plugin to easily cross style fonts and colors</description>
        <tags>mvvm mvvmcross xamarin monodroid monotouch style fonts</tags>
        <dependencies>
            <group>
                <dependency id="MvvmCross" version="6.0.1" />
            </group>
            <group targetFramework="MonoAndroid">
                <dependency id="MvvmCross" version="6.0.1" />
                <dependency id="MvvmCross.Plugin.Color" version="6.0.1" />
            </group>
            <group targetFramework="Xamarin.iOS10">
                <dependency id="MvvmCross" version="6.0.1" />
                <dependency id="MvvmCross.Plugin.Color" version="6.0.1" />
            </group>
        </dependencies>
    </metadata>
    <files>     

        <!-- pcl -->
        <file src="bin/Release/Redhotminute.Mvx.Plugin.Style.dll" target="lib/portable-net45+win+wp80+wpa81+MonoAndroid+Xamarin.iOS10+netstandard2.0" />

        <!-- droid -->
        <file src="bin/Release/Redhotminute.Mvx.Plugin.Style.dll" target="lib/MonoAndroid" />
        <file src="bin/Release/Redhotminute.Mvx.Plugin.Style.Droid.dll" target="lib/MonoAndroid" />

        <!-- ios -->
        <file src="bin/Release/Redhotminute.Mvx.Plugin.Style.dll" target="lib/Xamarin.iOS10" />
        <file src="bin/Release/Redhotminute.Mvx.Plugin.Style.Touch.dll" target="lib/Xamarin.iOS10" />

    </files>
</package>