<?xml version="1.0" encoding="utf-8"?>
 <package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
    <metadata>
        <id>Redhotminute.Plugin.Style</id>
        <version>1.0.0</version>
        <title>Redhotminute Style (mvvmcross plugin)</title>
        <authors>Koen Deleij</authors>
        <owners>Redhotminute BV</owners>
        <requireLicenseAcceptance>false</requireLicenseAcceptance>
        <description>Mvvmcross plugin to easily cross style fonts and colors</description>
        <tags>mvvm mvvmcross xamarin monodroid monotouch style fonts</tags>
        <dependencies>
            <group targetFramework="portable-net45+win+wp80">
                <dependency id="MvvmCross.Platform" version="4.3.0" />
                <dependency id="MvvmCross.Core" version="4.3.0" />
                <dependency id="MvvmCross.Binding" version="4.3.0" />
                <dependency id="MvvmCross.Plugin.Color" version="4.3.0" />
            </group>
            <group targetFramework="MonoAndroid">
                <dependency id="MvvmCross.Platform" version="4.3.0" />
                <dependency id="MvvmCross.Core" version="4.3.0" />
                <dependency id="MvvmCross.Binding" version="4.3.0" />
                <dependency id="MvvmCross.Plugin.Color" version="4.3.0" />
            </group>
            <group targetFramework="Xamarin.iOS10">
                <dependency id="MvvmCross.Platform" version="4.3.0" />
                <dependency id="MvvmCross.Core" version="4.3.0" />
                <dependency id="MvvmCross.Binding" version="4.3.0" />
                <dependency id="MvvmCross.Plugin.Color" version="4.3.0" />
            </group>
        </dependencies>
    </metadata>
    <files>     

        <!-- pcl -->
        <file src="bin/Release/pcl/Redhotminute.Plugin.Style.*" target="lib/portable-net45+win+wp80" />

        <!-- droid -->
        <file src="bin/Release/pcl/Redhotminute.Plugin.Style.*" target="lib/MonoAndroid" />
        <file src="bin/Release/Redhotminute.Plugin.Style.Droid.*" target="lib/MonoAndroid" />
        <file src="Bootstrap/BootstrapDroid/RHMStylePluginBootstrap.cs.pp" target="content/MonoAndroid/Bootstrap/RHMStylePluginBootstrap.cs.pp" />

        <!-- ios -->
        <file src="bin/Release/pcl/Redhotminute.Plugin.Style.*" target="lib/Xamarin.iOS10" />
        <file src="bin/Release/Redhotminute.Plugin.Style.Touch.*" target="lib/Xamarin.iOS10" />
        <file src="Bootstrap/BootstrapIOS/RHMStylePluginBootstrap.cs.pp" target="content/Xamarin.iOS10/Bootstrap/RHMStylePluginBootstrap.cs.pp" />

    </files>
</package>